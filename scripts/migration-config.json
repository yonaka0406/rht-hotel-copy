{
  "migrationConfig": {
    "version": "1.0",
    "created": "2024-11-08",
    "description": "Configuration for documentation migration from scattered files to organized structure"
  },
  "rootLevelMigrations": {
    "ARCHITECTURE.md": {
      "targetPath": "docs/architecture/system-overview.md",
      "action": "move_and_enhance",
      "preserveOriginal": false,
      "updateLinks": true,
      "consolidateWith": [
        "docs/design/system-architecture.md"
      ],
