{
    "name": "rht-hotel",
    "version": "1.1.17",
    "private": true,
    "scripts": {
        "build": "npm run build:frontend",
        "build:frontend": "npm --prefix frontend run build -- --mode production",
        "build:frontend:dev": "npm --prefix frontend run build:dev",
        "deploy:frontend:test": "sudo rm -rf /var/www/test.wehub.work/dist/* && sudo cp -r frontend/dist/* /var/www/test.wehub.work/dist/",
        "deploy:frontend:prod": "sudo rm -rf /var/www/wehub.work/dist/* && sudo cp -r frontend/dist/* /var/www/wehub.work/dist/",
        "stop:apache": "sudo systemctl stop apache2",
        "start:apache": "sudo systemctl start apache2",
        "restart:apache": "sudo systemctl restart apache2",
        "stop:psql": "sudo systemctl stop postgresql",
        "start:psql": "sudo systemctl start postgresql",
        "start": "npm run build && npm run start:backend",
        "serve": "npm run build:frontend development && npm run start:backend",
        "serve:dev": "npm run stop:apache && npm run stop:psql && npm run build:frontend:dev && npm run deploy:frontend:test && npm run start:apache && npm run start:psql && pm2 startOrRestart ecosystem.config.js --env development --only backend-dev",
        "serve:prod": "npm run stop:apache && npm run stop:psql && npm run build:frontend && npm run deploy:frontend:prod && npm run start:apache && npm run start:psql && pm2 startOrRestart ecosystem.config.js --env production --only backend-prod",
        "start:backend:dev": "pm2 start ecosystem.config.js --env development --only backend-dev",
        "start:backend:prod": "pm2 start ecosystem.config.js --env production --only backend-prod",
        "stop:backend:dev": "pm2 stop backend-dev",
        "stop:backend:prod": "pm2 stop backend-prod",
        "restart": "pm2 restart backend",
        "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
        "dev:frontend": "npm --prefix frontend run dev",
        "start:backend": "pm2 start api/index.js --name backend",
        "stop:backend": "pm2 stop backend",
        "dev:backend": "nodemon api/index.js",
        "redis": "wsl -e bash -ic \"sudo service redis-server start\"",
        "redis:stop": "wsl -e bash -ic \"sudo service redis-server stop\"",
        "redis:status": "wsl -e bash -ic \"sudo service redis-server status\"",
        "validate:requirements": "node scripts/validate-requirements.js",
        "validate:links": "node scripts/validate-docs-links.js",
        "validate:docs": "node scripts/validate-all-docs.js"
    },
    "devDependencies": {
        "concurrently": "^9.2.0",
        "supabase": "^2.39.2"
    },
    "dependencies": {
        "dotenv": "^17.2.0",
        "express": "^5.1.0",
        "express-session": "^1.18.1",
        "ioredis": "^5.6.1",
        "jsonwebtoken": "^9.0.2",
        "nodemon": "^3.1.10",
        "pg": "^8.16.3",
        "pm2": "^6.0.8",
        "winston": "^3.17.0"
    }
}
